<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".UI.activities.AccidentDetectedActivity">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/optionMarginSize"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily= "@font/roboto"
        android:gravity="center"
        android:text="@string/alert_title"
        android:textAlignment="center"
        android:textColor="?attr/colorOnBackground"
        android:textSize="@dimen/optionTextSize"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- First Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/option1"
        android:layout_width="0dp"
        android:layout_height="@dimen/optionHeight"
        android:layout_marginTop="@dimen/optionMarginSize"
        android:text="@string/option1"
        android:textSize="@dimen/optionTextSize"
        android:fontFamily= "@font/roboto"

        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Second Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/option2"
        android:layout_width="0dp"
        android:layout_height="@dimen/optionHeight"
        android:fontFamily= "@font/roboto"

        android:layout_marginTop="@dimen/optionMarginSize"
        android:text="@string/option2"
        android:textSize="@dimen/optionTextSize"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/option1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Third Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/option3"
        android:layout_width="0dp"
        android:layout_height="@dimen/optionHeight"
        android:layout_marginTop="@dimen/optionMarginSize"
        android:text="@string/option3"
        android:fontFamily= "@font/roboto"

        android:textSize="@dimen/optionTextSize"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/option2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>
